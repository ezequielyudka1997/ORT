	gen primariabasico_tecnica =1 if e198==2 & e210_1==2 & e210_2==0 & e210_3==0 & e213==2
	sum primariabasico_tecnica [fw=pesoano]
	/*Vemos cuantos de los que iban a udelar fueron a primaria privada, ciclo 
