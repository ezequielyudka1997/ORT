	gen cinco_privado =1 if e198==2 & e210_1==2 & e210_2==2 & e210_3==2 & e213==2
	sum cinco_privado [fw=pesoano]
	/*Vemos cuantos de los que iban a udelar fueron a primaria privada, ciclo 
